	   if (x.charAt(x.length()-2) == 'a' && x.charAt(x.length()-1) == 'n' && x.charAt(x.length()) == 'd') return "&" + ShortHand(x.substring(x.length()-1));
	   if (x.charAt(0) == 't' && x.charAt(1) == 'o') return "2" + ShortHand(x.substring(2));
	   if (x.charAt(x.length()-2) == 'y' && x.charAt(x.length()-1) == 'o' && x.charAt(x.length()) == 'u') return "u" + ShortHand(x.substring(x.length()-1));
