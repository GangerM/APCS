public class Account {
	int p,n,d,q;
	double myBalance;	
	public Account(){
		p = 0;
		n = 0;
		d = 0;
		q = 0;
		myBalance = 0.0;
	}
	public Account(int pennies, int nickels, int dimes, int quarters){
	    pennies = p;
		nickels = n;
		dimes = d;
		quarters = q;
		myBalance = (((pennies+(nickels*5)+(dimes*10)+(quarters*25))* 1.00)/100); //total is in cents
		if (myBalance < 0) throw new IllegalArgumentException("bro you have negative moneyz");
	}
	public int getPennies() {
		return p;
	}
	public void addPennies(int x){
		p += x;
		if (x < 0)throw new IllegalArgumentException("You can't deposit a negative amount");
		myBalance+=x;
	}
	public int getDimes(){
		return d;
	}
	public void addNickels(int x){
		n += x;
		if (x < 0)throw new IllegalArgumentException("You can't deposit a negative amount");
		myBalance+=(x*5);
	}
	public int getNickels(){
		return n;
	}
	public void addDimes(int x){
		d += x;
		if (x < 0)throw new IllegalArgumentException("You can't deposit a negative amount");
		myBalance+=(x*10);
	}
	public int getQuarters(){
		return q;
	}
	public void addQuarters(int x){
		q += x;
		if (x < 0)throw new IllegalArgumentException("You can't deposit a negative amount");
		myBalance+=(x*25);
	}
	public double getBalance(){
		return myBalance;
	}
	public void withdraw(double x){
		if (x > myBalance) throw new IllegalArgumentException("Account overdrawn");
		myBalance -= x;
	}
}
