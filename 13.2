import java.io.File;
import java.util.Scanner;
import java.io.IOException;
public class Exceptions {
    Scanner in;
	public void avg() {
		long total = 0; //long number for larger values
		int count = 0;
		try {
			in = new Scanner(new File ("numbers.txt"));
		}catch(IOException e){
		    System.out.println(e.getMessage()); //catchs the exception and stuff
		  }
		while(in.hasNext()){
			if(in.hasNextInt()){
				total += in.nextInt();
				count++; //adds 1 to the total amount of numbers
			}
		}
		System.out.println("Total: " + total);
		System.out.println("Count: " + count);
		System.out.println("Average: " + total/count);
	}
}
