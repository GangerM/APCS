public class FunLoops
{   
   public int checkSquares(int x){ // x is the number being checked
   int n = x;
   if (sumOf(n) >= (x*x)){ //checks if square = sum of n or smaller
       while(n > 0){
           if ((x*x) == sumOf(n)) return x*x;
           else n--;
        }
   }
   else{ //else statement for if the sum of n is too small
       while(sumOf(n) <= (x*x)){
           if ((x*x) == sumOf(n)) return x*x;
           else n++;
        }
   } 
   return -1; //if the square of x does not equal and sums
   }
   public int sumOf(int x){ //summation function of number x
    int sum = 0;
    for( ; x > 0 ; x--){
        sum += x;
    }
    return sum;
   }
